FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY BE/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY BE/ ./

# Copy docker environment file
RUN cp .env.docker .env

# Create logs directory
RUN mkdir -p logs

# Expose port
EXPOSE 3000

# Start the application
CMD ["node", "--experimental-specifier-resolution=node", "src/app.js"]
